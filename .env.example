# ===== CONFIGURACIÓN PARA RAILWAY =====
# Railway proporciona automáticamente DATABASE_URL cuando agregas PostgreSQL
# No necesitas configurar DB_USER, DB_PASS, DB_HOST, DB_PORT, DB_NAME

# === Variables de entorno requeridas ===

# Base de Datos (Railway lo provee automáticamente)
# DATABASE_URL=postgresql://user:password@host:port/database

# Puerto (Railway lo provee automáticamente)
# PORT=8000

# Seguridad - JWT
SECRET_KEY=tu_clave_secreta_super_segura_aqui_cambiar_en_produccion
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# === Variables opcionales para desarrollo local ===

# Base de datos local (solo si no usas DATABASE_URL)
DB_USER=postgres
DB_PASS=tu_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=detector_sqli

# Directorios
UPLOAD_DIR=uploads
REPORTS_DIR=reports
QUARANTINE_DIR=quarantine
AUDIT_DIR=audit_logs

# Configuración de limpieza automática
REMOVE_REPORTS_AFTER_DOWNLOAD=false
REPORT_RETENTION_DAYS=7
REMOVE_UPLOADS_AFTER_ANALYSIS=true

# Seguridad
SECURITY_SCAN_ENABLED=true
AUDIT_ENABLED=true

# Railway Environment (automático en Railway)
# RAILWAY_ENVIRONMENT_NAME=production
